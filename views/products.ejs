<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
  />
  <link href="/output.css" rel="stylesheet" />
  <title>Our Products</title>



</head>

<body class="min-h-screen">
 
  <nav class="bg-purple-300 flex pt-2 pb-2 pr-10 pl-10 items-center justify-between">
    <div id="logo" class="text-xl font-bold">LOGO</div>
    <ul class="flex gap-8 items-center">
      <li><a href="/" class="hover:underline"><i class="fa-solid fa-house"></i></a></li>
      <li><a href="/cart" class="hover:underline"><i class="fa-solid fa-cart-shopping"></i></a></li>
    </ul>
  </nav>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 m-4">
    <% for(let i = 0; i < product.length; i++) { %>
      <div class="flex flex-col h-96 gap-2 border rounded-lg overflow-hidden shadow">
        <!-- IMAGE SECTION -->
        <div class="h-3/4 relative group">
          <img class="h-full w-full object-cover" src="<%= product[i].image %>" alt="<%= product[i].name %>">

          <div
            class="flex justify-center items-center absolute inset-0 backdrop-blur-sm opacity-0 transition duration-200 group-hover:opacity-100">
            <a
              href="/product/<%= product[i].id %>"
              class="view border border-white text-white p-2 hover:bg-white hover:text-black">
              VIEW
            </a>
          </div>
        </div>

        <!-- DETAILS SECTION -->
        <div class="details h-1/4 flex flex-col justify-center items-center gap-1">
          <h1 class="text-center text-lg font-semibold"><%= product[i].name %></h1>
          <h2 class="text-center text-gray-600">â‚¹<%= product[i].price %></h2>
          <button
            onclick="addToCart('<%= product[i].id %>')"
            class="mt-2 pt-2 pb-2 pl-4 pr-4 border border-purple-500 text-purple-700 hover:bg-purple-500 hover:text-white rounded">
            ADD
          </button>
        </div>
      </div>
    <% } %>
  </div>

  <script src="/cart.js" defer></script>
</body>

</html>
