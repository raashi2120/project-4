<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="/output.css" rel="stylesheet">
    <title>Your cart</title>
</head>

<body class="h-screen">
    <nav class="bg-purple-300 flex justify-between py-2 px-6 sm:px-12">
        <div id=" logo" class="basis-1/2">LOGO</div>
        <ul class="flex basis-1/2 justify-end ">
            <li class="hover:cursor-pointer"><a href="/"><i class="fa-solid fa-house"></a></i></li>


        </ul>
    </nav>

    <h1 class="text-2xl font-bold m-4">Your Cart</h1>
    <button onclick="clearCart()" class="ml-4 mb-4 bg-red-500 text-white px-3 py-1 rounded">Clear Cart</button>

    <div id="cart-container" class="p-6 grid gap-4"></div>

    <script>
        const cart = JSON.parse(localStorage.getItem("cart")) || {};
        const allProducts = JSON.parse('<%- JSON.stringify(data) %>');

        const cartContainer = document.getElementById("cart-container");

        let totalAmount = 0;

        for (let id in cart) {
            let product = null;
            for (let category in allProducts) {
                product = allProducts[category].find(p => p.id == id);
                if (product) break;
            }

            if (product) {
                const quantity = cart[id].quantity;
                totalAmount += product.price * quantity;
                const div = document.createElement("div");
               div.className = "flex flex-col md:flex-row justify-between p-4 w-full rounded shadow hover:border hover:border-purple-300";

div.innerHTML = `
  <div class="md:flex md:items-center p-4 w-full rounded shadow hover:border hover:border-purple-300 gap-6">

    <!-- LEFT COLUMN: Text Content -->
    <div class="flex flex-col justify-between md:w-2/3 w-full space-y-2">
      <h2 class="text-lg font-bold">${product.name}</h2>
      <p>Price: ₹${product.price}</p>
      <p class="flex items-center gap-2">
        Quantity:
        <button onclick="updateCart(${product.id}, -1)" class="px-2 bg-gray-300 rounded">-</button>
        <span id="qty-${product.id}">${quantity}</span>
        <button onclick="updateCart(${product.id}, 1)" class="px-2 bg-gray-300 rounded">+</button>
      </p>
      <p>Total: ₹<span id="total-${product.id}">${product.price * quantity}</span></p>
      <button onclick="removeFromCart(${product.id})" class="bg-red-600 text-white px-4 py-2 rounded w-full md:w-1/2">
        Remove
      </button>
    </div>

    <!-- RIGHT COLUMN: Image -->
    <div class="mt-4 md:mt-0 md:w-1/3 w-full flex justify-center">
      <img src="${product.image}" class="w-full max-w-[250px] max-h-64 object-cover rounded" />
    </div>

  </div>
`;



                cartContainer.appendChild(div);
            }
        }
        const total = document.createElement('div');
        total.innerHTML = `
            <div>
             <h1>TOTAL AMOUNT : ${totalAmount}</h1>
             </div>
        `;

        cartContainer.appendChild(total);



    </script>
    <script src="/cart.js" defer></script>



</body>

</html>